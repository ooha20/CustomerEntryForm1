<!-- Floating Popup -->
<div id="onboardPopup" class="card shadow-lg position-fixed" style="bottom: 20px; right: 20px; width: 300px; z-index: 1055; display: none;">
    <div class="card-body text-center">
        <h5 class="fw-bold mb-2">Ready to get started?</h5>
        <p class="small">Register now and streamline your customer onboarding process.</p>
        <a class="btn btn-primary btn-sm" asp-controller="Customer" asp-action="Entry">Start Onboarding</a>
        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" onclick="closePopup()" aria-label="Close"></button>
    </div>
</div>

@section Scripts {
    <script>
        let hasShown = false;
        window.addEventListener('scroll', () => {
            if (!hasShown && (window.scrollY > 200 || window.scrollY < 50)) {
                document.getElementById("onboardPopup").style.display = "block";
                hasShown = true;
            }
        });

        function closePopup() {
            document.getElementById("onboardPopup").style.display = "none";
        }
    </script>
}

