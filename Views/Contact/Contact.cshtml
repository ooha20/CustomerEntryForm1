@{
    ViewData["Title"] = "Contact Us";
}

<section class="bg-dark text-white text-center py-5 text-sm-start">
    <div class="container">
        <div class="col" style="min-height: 300px;padding-top:70px;">
            <h1 class="display-4 fw-bold" data-aos="fade-down">Contact Us</h1>
        </div>
    </div>
</section>

<<section class="contact-section py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <!-- Left: Form -->
            <div class="col-lg-7">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h3 class="card-title mb-4">We’d Love to Hear from You!</h3>

                        @if (TempData["ContactSuccess"] != null)
                        {
                            <div class="alert alert-success">@TempData["ContactSuccess"]</div>
                        }

                        <form asp-action="Submit" method="post">
                            <div class="mb-3">
                                <label for="Name" class="form-label">Name</label>
                                <input id="Name" name="name" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label for="Email" class="form-label">Email</label>
                                <input id="Email" name="email" type="email" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label for="Message" class="form-label">Message</label>
                                <textarea id="Message" name="message" rows="5" class="form-control" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Right: Static Contact Info -->
            <div class="col-lg-5">
                <div class="bg-white shadow p-4 rounded h-100">
                    <div class="d-flex mb-4">
                        <i class="bi bi-telephone-fill fs-4 text-primary me-3"></i>
                        <div>
                            <h6 class="fw-semibold mb-1">Phone</h6>
                            <p class="mb-0">1-800-123-4567</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <i class="bi bi-envelope-fill fs-4 text-primary me-3"></i>
                        <div>
                            <h6 class="fw-semibold mb-1">Email</h6>
                            <a href="mailto:support@insureease.com">support@insureease.com</a>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <i class="bi bi-geo-alt-fill fs-4 text-primary me-3"></i>
                        <div>
                            <h6 class="fw-semibold mb-1">Address</h6>
                            <p class="mb-0">123 Main St<br />Anytown, USA 12345</p>
                        </div>
                    </div>

                    <div class="d-flex">
                        <i class="bi bi-clock-fill fs-4 text-primary me-3"></i>
                        <div>
                            <h6 class="fw-semibold mb-1">Hours</h6>
                            <p class="mb-0">Mon–Fri, 9am–6pm</p>
                        </div>
                    </div>

                    <!-- Google Map Embed or Static Image -->
                    <div class="mt-4">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.0862138622273!2d-122.41941568467822!3d37.77492977975945!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085808e0486cfff%3A0x4090a5b6f8bbfd5b!2s123+Main+St%2C+San+Francisco%2C+CA!5e0!3m2!1sen!2sus!4v1621457658790!5m2!1sen!2sus"
                                style="border:0; width: 100%; height: 200px;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


